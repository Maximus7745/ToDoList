                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>!-->
            <Button Text="{local:Translate NewTaskButtom}" Clicked="ClickedNewTarget" BackgroundColor="Aqua">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>